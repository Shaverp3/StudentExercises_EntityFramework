@model StudentExercises_EF.Models.Cohort

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cohort</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Assigned Students
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var singleStudent in Model.Students)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => singleStudent.FirstName) @Html.DisplayFor(modelItem => singleStudent.LastName)
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Assigned Instructors
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var singleInstructor in Model.Instructors)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => singleInstructor.FirstName) @Html.DisplayFor(modelItem => singleInstructor.LastName)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
